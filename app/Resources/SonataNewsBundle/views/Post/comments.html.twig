{% trans_default_domain 'blog' %}

<div class="comments-sec">
    <div class="comments-title">
        <h3>{{ 'comments.list.title'|transchoice(pager.count) }}</h3>
    </div>
    {% for comment in pager.results %}
        <div class="col-xs-8 col-sm-10 col-md-10">
            <div class="bloger-comments">
                <span>{{ comment.createdAt|localizeddate('medium', 'short') }}</span>
                <h3>
                    {{ 'comments.list.author'|trans({ '%author%': '<a href="mailto:' ~ comment.email ~ '" target="new" rel="nofollow">' ~ comment.name ~ '</a>' })|raw }}
                </h3>
            </div>
            <div class="comments-reply">
                <label class="col-xs-8 col-sm-8">{{ comment.message }}</label>
            </div>
        </div>
    {% else %}
        <p>{{ 'comments.list.no_comments'|trans }}</p>
    {% endfor %}
</div>
