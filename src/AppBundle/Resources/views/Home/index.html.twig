{% extends 'AppBundle::base.html.twig' %}

{% trans_default_domain 'home' %}

{% block hero %}
    <div class="top_slider_contanear">
        <img src="images/slider_img2.png" alt="Agile training and coaching">
    </div>

    {#{% for i in 1..3 %}#}
        {#<div>#}
            {#<h2>{{ ('hero.slide' ~ i ~ '.title')|trans }}</h2>#}
