            {#<p>{{ ('hero.slide' ~ i ~ '.text')|trans }}</p>#}
        {#</div>#}
    {#{% endfor %}#}
{% endblock hero %}

{% block body %}

    <!--start_how_can_help_contanear-->
    <div class="how_can_help_contanear">
        <div class="contanear">
            <div class="how_can_help_text">
                <h1>{{ 'how.title'|trans }}</h1>
                <h2>{{ 'how.subtitle'|trans }}</h2>
            </div>
            <div class="how_can_help_box_area">
                {% for i in 1..3 %}
                    <div class="how_can_help_box1">
                        <div class="how_can_help_top_img_area"><img src="images/how_can_help_top_icon.jpg" alt="image description"></div>
                        <div class="how_can_help_main_img_and_text_area">
                            <div class="how_can_help_main_img_box"><img src="images/how_can_help_img{{ i }}.jpg" alt="image description"></div>
                            <div class="how_can_help_text_area">
                                <p>{{ ('how.element' ~ i ~ '.title')|trans }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!--end_how_can_help_contanear-->

    <div class="how_do_we">
        <div class="how_do_we_main_title">
            <h1>{{ 'what.title'|trans }}</h1>
            <h2>{{ 'what.subtitle'|trans }}</h2>
        </div>
        {{ render(controller('AppBundle:Service:servicesAndTrainingswidget')) }}
    </div>

    <div class="whats_happening_panel">
        <div class="contanear">
            <h2>{{ 'activities.title'|trans }}</h2>
            <h5>{{ 'activities.subtitle'|trans }}</h5>

            <div class="whats_happening_panel_inner">
                <div class="whats_happening_panel_inner_left">
                    {{ render(controller('AppBundle:News:widget')) }}
                </div>
                <div class="whats_happening_panel_inner_left">
                    {{ render(controller('AppBundle:Event:widget')) }}
                </div>
            </div>
        </div>
    </div>

    <div class="testimonial_contanear">
        {{ render(controller('AppBundle:Testimonial:widget')) }}
    </div>

    {#<div class="panel panel-default col-md-12">#}
        {#<div class="panel-heading">Newsletter</div>#}
        {#<div class="panel-body">#}
            {#{{ form(newsletterForm) }}#}
        {#</div>#}
    {#</div>#}
{% endblock %}
