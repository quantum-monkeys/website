{% extends 'AppBundle::base.html.twig' %}

{% trans_default_domain 'home' %}

{% block hero_style %} style="background-image: url(/images/doors-1690423_1920-orange.jpg); background-position: center center;"{% endblock hero_style %}

{% block hero %}
    <div class="home-hero">
        <h2>{{ 'hero.title'|trans|raw }}</h2>
        <h3>{{ 'hero.subtitle'|trans|raw }}</h3>
        <a class="video-cta fancybox.iframe" href="http://www.youtube.com/embed/tYQDI0JEGNc?autoplay=1">
            <i class="fa fa-play"></i>
        </a>
    </div>
{% endblock hero %}

{% block breadcrumb %}{% endblock %}

{% block body %}

    {% include '@App/Services/widget.html.twig' %}

    <div class="whats_happening_panel">
        <div class="contanear">
            <h2>{{ 'activities.title'|trans }}</h2>

            <div class="whats_happening_panel_inner">
                <div class="whats_happening_panel_inner_left">
                    {{ render(controller('AppBundle:News:widget')) }}
                </div>
                <div class="whats_happening_panel_inner_left">
                    {{ render(controller('AppBundle:Event:widget')) }}
                </div>
            </div>
        </div>
    </div>

    {{ render(controller('AppBundle:Testimonial:widget')) }}
{% endblock %}
