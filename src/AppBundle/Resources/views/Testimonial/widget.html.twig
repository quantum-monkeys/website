<div class="panel panel-default col-md-12">
    <div class="panel-heading">Testimonials</div>
    <div class="panel-body">
        {% for testimonial in testimonials %}
            {% media testimonial.person.picture, 'small' %}
            <h4>{{ testimonial.person.displayName }}</h4>
            <span>{{ testimonial.person.position }}</span>
            {% if testimonial.person.company %}
                <span>at {{ testimonial.person.company }}</span>
            {% endif %}
            <p>{{ testimonial.content }}</p>
        {% endfor %}
    </div>
</div>
