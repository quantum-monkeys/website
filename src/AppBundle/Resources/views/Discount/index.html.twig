{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        {% for discount in discounts %}
            <div class="row">
                {% if loop.index % 2 == 1 %}
                    <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                        <div class="left-slider">
                            <div class="item">
                                {% media discount.picture, 'service_big' %}
                            </div>
                        </div>
                    </div>
                {% endif %}
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <div class="over-cont">
                        <div class="mission-heading">
                            <h3>{{ translate(discount, 'name') }}</h3>
                        </div>
                        <p>{{ translate(discount, 'description')|markdown }}</p>
                    </div>
                </div>
                {% if loop.index % 2 == 0 %}
                    <div class="col-md-6">
                        <div class="working_method">
                            {% media discount.picture, 'service_big' %}
                        </div>
                    </div>
                {% endif %}
            </div>

            {% if not loop.last %}
                <hr>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
