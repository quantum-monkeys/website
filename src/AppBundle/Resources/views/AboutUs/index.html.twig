{% extends 'AppBundle::base.html.twig' %}

{% trans_default_domain 'about' %}

{% block body %}
    <div class="aboutus container">
        <div class="row">
            <picture class="col-sm-12 col-md-6 col-lg-6">
                <img src="{{ asset('images/logo-big.png') }}">
            </picture>
            <div class="col-sm-12 col-md-6 col-lg-6 aboutus-description">
                {{ 'description'|trans|markdown }}
            </div>
        </div>

        <hr>

        <div class="row">
            <h2>{{ 'values.title'|trans }}</h2>

            <div class="col-xs-12 col-sm-6 col-lg-3 value">
                <div class="thumbnail">
                    <picture>
                        <i class="fa fa-users"></i>
                    </picture>
                    <div class="caption">
                        <h3>{{ 'values.first.title'|trans }}</h3>
                        <p>{{ 'values.first.text'|trans|nl2br }}</p>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3 value">
                <div class="thumbnail">
                    <picture>
                        <i class="fa fa-bolt"></i>
                    </picture>
                    <div class="caption">
                        <h3>{{ 'values.second.title'|trans }}</h3>
                        <p>{{ 'values.second.text'|trans|nl2br }}</p>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3 value">
                <div class="thumbnail">
                    <picture>
                        <i class="fa fa-flask"></i>
                    </picture>
                    <div class="caption">
                        <h3>{{ 'values.third.title'|trans }}</h3>
                        <p>{{ 'values.third.text'|trans|nl2br }}</p>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-lg-3 value">
                <div class="thumbnail">
                    <picture>
                        <i class="fa fa-level-up"></i>
                    </picture>
                    <div class="caption">
                        <h3>{{ 'values.fourth.title'|trans }}</h3>
                        <p>{{ 'values.fourth.text'|trans|nl2br }}</p>
                    </div>
                </div>
            </div>
        </div>

        <hr>

        <div class="row">
            <h2>{{ 'team'|trans }}</h2>

            {% for person in people %}
                <div class="team-member col-sm-12 col-md-4">
                    <figure>
                        {% media person.picture, 'person_about' with {
                            'class': 'img-rounded img-responsive'
                        } %}
                        <div class="popover-sn">
                            <div class="overlay"></div>
                            <ul class="social-networks">
                                <li>
                                    <a href="{{ person.linkedInProfile }}"><i class="fa fa-linkedin"></i></a>
                                </li>
                            </ul>
                        </div>
                    </figure>
                    <div class="informations">
                        <h4>{{ person.displayName }}</h4>
                        <p class="position">{{ translate(person, 'position') }}</p>
                        <p class="description">{{ translate(person, 'description') }}</p>

                        {% if person.certifications|length > 0 %}
                            <h5><i class="fa fa-certificate"></i> Certifications</h5>
                            <ul class="certifications">
                                {% for certification in person.certifications %}
                                    <li class="certification">{{ certification.name }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>
                </div>
                {% if loop.index % 3 == 0 or loop.last %}
        </div>
        <hr class="visible-md visible-lg">
        <div class="row">
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
