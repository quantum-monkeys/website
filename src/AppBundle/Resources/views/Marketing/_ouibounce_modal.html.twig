{% trans_default_domain 'ouibounce' %}

<div id="ouibounce-modal" style="display: none;">
    <div class="underlay"></div>
    <div class="modal">
        <div class="modal-title">
            <h3>{{ 'title'|trans|markdown }}</h3>
        </div>

        <div class="modal-body">
            <div class="row intro">
                {{ 'intro'|trans|markdown }}
            </div>

            <div class="row">
                <div class="alert alert-success">{{ 'message.success'|trans }}</div>
                <div class="alert alert-danger">{{ 'message.error'|trans }}</div>

                {{ form_start(form, {
                    'attr': {
                        'class': 'form-inline',
                        'id': 'contact-culture-fest'
                    }
                }) }}
                    <div class="form-group">
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.submit) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="modal-footer">
            <a href="#" class="close-modal">{{ 'close'|trans|markdown }}</a>
        </div>
    </div>
</div>
