{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="container landing-page">
        <div class="row">
            <div class="hidden-xs col-sm-4">
                <picture>
                    {% media campaignTranslation.mainPicture, 'landing_page_main' with {
                        'class': 'img-responsive'
                    } %}
                </picture>
            </div>
            <div class="col-xs-12 col-sm-8">
                <h2>{{ campaignTranslation.title }}</h2>

                {{ campaignTranslation.mainContent|markdown }}

                <h3>{{ campaignTranslation.mainFormTitle }}</h3>

                {{ form_start(form, {
                    'attr' : {
                        'class': 'form-horizontal'
                    }
                }) }}
                    <div class="row">
                        <div class="col-xs-6">
                            {{ form_widget(form.firstName, {
                                'attr' : {
                                    'class': 'form-control'
                                }
                            }) }}
                        </div>
                        <div class="col-xs-6">
                            {{ form_widget(form.lastName, {
                                'attr' : {
                                    'class': 'form-control'
                                }
                            }) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_widget(form.email, {
                                'attr' : {
                                    'class': 'form-control'
                                }
                            }) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_widget(form.company.name, {
                                'attr' : {
                                    'class': 'form-control',
                                    'placeholder': 'form.placeholders.company.name_facultative'
                                },
                                'required': false
                            }) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_widget(form.submit, {
                                'label': campaignTranslation.mainSubmitButtonLabel,
                                'attr' : {
                                    'class': 'btn btn-default'
                                }
                            }) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
            <div class="visible-xs col-xs-12">
                <picture>
                    {% media campaignTranslation.mainPicture, 'landing_page_main' with {
                        'class': 'img-responsive'
                    } %}
                </picture>
            </div>
        </div>
    </div>
{% endblock %}
