{% extends 'AppBundle::base.html.twig' %}

{% trans_default_domain 'events' %}

{% block hero %}
    <div class="visual-area" style="background-image: url(images/image1.jpg);">
        <div class="contanear">
            <h1>OUR UPCOMING <span>EVENTS</span></h1>
            <p>Don't miss out! Register <span>TODAY</span> and discover our latest offers!</p>
            <div id="clockdiv">
                <div>
                    <strong class="title days"></strong>
                    <span class="smalltext">Days</span>
                </div>
                <div>
                    <strong class="title hours"></strong>
                    <span class="smalltext">Hours</span>
                </div>
                <div>
                    <strong class="title minutes"></strong>
                    <span class="smalltext">Minutes</span>
                </div>
                <div>
                    <strong class="title seconds"></strong>
                    <span class="smalltext">Seconds</span>
                </div>
            </div>
            <a href="#" class="btn-booknow">BOOK NOW</a>
        </div>
    </div>
{% endblock hero %}

