    <div class="search-block">
        <div class="container">
            <form action="#" class="search-form">
                <div class="col">
                    {{ form_row(form.city, {
                        'attr': {
                            'class': 'present',
                            'data-jcf': '{"wrapNative": false, "wrapNativeOnMobile": false}',
                        }
                    }) }}
                </div>
                <div class="col">
                    {{ form_row(form.lang, {
                        'attr': {
                            'class': 'present',
                            'data-jcf': '{"wrapNative": false, "wrapNativeOnMobile": false}',
                        }
                    }) }}
                </div>
                <div class="col">
                    <input type="submit" value="search">
                </div>
                <div class="col">
                    <a class="reset" href="{{ path('event_list') }}">Reset</a>
                </div>
            </form>
        </div>
    </div>
    <!-- breadcrumb -->
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li>Events</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- events block -->
    <section class="events container">
        <div class="events-holder">
            {% for event in events %}
                <article class="event-box">
                    <div class="box">
                        <div class="image-holder">
                            {% media event.event.picture, 'event_list' %}
                        </div>
                        <time class="date" datetime="{{ event.begin|localizeddate('short', 'none') }}">
                            {{ event.begin|localizeddate('short', 'none') }}
                        </time>
                        <div class="info-box">
                            <strong class="title">
                                <a href="{{ path('event_show', { id: event.id }) }}">
                                    {{ event.location.name }} - {{ event.location.city }}, {{ event.location.region }}
                                </a>
                            </strong>
                            <time>@ {{ event.begin|localizeddate('none', 'short') }}</time>
                            <p>{{ translate(event.event.translations, 'description')|truncate(50, true, '...') }}</p>
                            <div class="buttons">
                                <div class="btn-holder">
                                    <a href="{{ path('event_show', { id: event.id }) }}" class="btn">{{ 'list.button.details'|trans }}</a>
                                </div>
                                <div class="btn-holder">
                                    <a href="{{ event.eventBriteLink }}" class="btn">{{ 'list.button.tickets'|trans }}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>
    </section>
{% endblock %}
