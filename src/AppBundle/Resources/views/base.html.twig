<!DOCTYPE html>
<html {{ sonata_seo_html_attributes() }}>
<head {{ sonata_seo_head_attributes() }}>
    <title>{% block title %}{{ 'meta.title'|trans }}{% endblock %}</title>
    <meta name="keywords" content="{% block keywords %}{{ 'meta.keywords'|trans }}{% endblock %}" />
    <meta name="description" content="{% block description %}{{ 'meta.description'|trans }}{% endblock %}" />
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content="{% block ogtitle %}{{ 'meta.title'|trans }}{% endblock %}" />
    <meta property="og:site_name" content="{% block ogsitename %}{{ 'meta.title'|trans }}{% endblock %}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://www.quantummonkeys.com" />
    <meta property="og:image" content="http://www.quantummonkeys.com/images/logo-big.png" />
    <meta property="og:description" content="{% block ogdescription %}{{ 'meta.description'|trans }}{% endblock %}" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="UTF-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/images/favicon.png" />

    {% block stylesheets %}{% endblock %}

    <!-- Custom Stylesheet -->
    <link rel="stylesheet" media="screen" href="{{ asset('css/vendors.min.css') }}" type="text/css" />
    <link rel="stylesheet" media="screen" href="{{ asset('css/app.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Neuton">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600">
    <link rel="stylesheet" href="http://cdn.bootcss.com/animate.css/3.5.1/animate.min.css">
</head>
<body>
    {% if app.request.locale and app.request.locale == 'fr' %}
        {% set sNewLocale = 'en' %}
    {% else %}
        {% set sNewLocale = 'fr' %}
    {% endif %}
    {% set requestAttributes =  app.request.attributes.all() %}
    {% set route = requestAttributes._route %}

    <!--start_top_contanear-->
    <div class="top_contanear">
        <div class="contanear">
            <div class="top_heade_right_area">
                <div class="top_social_area">
                    <p>
                        <a href="https://www.facebook.com/quantummonkeys"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                        <a href="https://www.linkedin.com/company/quantum-monkeys"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                        <a href="https://www.twitter.com/quantummonkeys"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                        <a href="http://plus.google.com/117632737566323856593"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                    </p>
                </div>
                <div class="codecon_half">
                    <a href="{{ localeSwitch(sNewLocale, requestAttributes) }}" class="langSwitcher">
                        {{ ('lang_switch.'~sNewLocale)|trans({}, 'menu') }}
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!--end_top_contanear-->

    <header{% block hero_style %} style="background-image: url(/images/topbg.jpg);"{% endblock hero_style %}>
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">
                        <div class="left-shape"></div>
                        <div class="shape">
                            <img alt="Brand" src="/images/logo-white.png">
                        </div>
                        <div class="right-shape"></div>
                    </a>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    {{ knp_menu_render('AppBundle:Builder:mainMenu', {
                        template: 'AppBundle:Menu:knp_menu.html.twig'
                    } ) }}
                </div>
            </div>
        </nav>

        {% block hero %}{% endblock hero %}
    </header>

    {% block preBody %}{% endblock %}

    {% block breadcrumb %}
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-ld-12">
                    {{ wo_render_breadcrumbs() }}
                </div>
            </div>
        </div>
    {% endblock %}

    {% block body %}{% endblock %}

    <div class="footer">
        <div class="contanear">
            <div class="footer_top">
                <p class="hello">{{ 'contact.title'|trans|raw }}</p>
            </div>
            <div class="footer_mainpanel_left">
                <div class="footer_mainpanel_left_inner"> <img src="/images/address-icon.png" alt="image description">
                    <p>
                        <span>{{ 'contact.informations.address.title'|trans }}</span><br>
                        {{ 'contact.informations.address.value'|trans }}
                    </p>
                </div>
                <div class="footer_mainpanel_left_inner"> <img src="/images/phone-icon.png" alt="image description">
                    <p>
                        <span>{{ 'contact.informations.phone.title'|trans }}</span><br>
                        {{ 'contact.informations.phone.value'|trans }}
                    </p>
                </div>
                <div class="footer_mainpanel_left_inner"> <img src="/images/message-icon.png" alt="image description">
                    <p>
                        <span>{{ 'contact.informations.email.title'|trans }}</span><br>
                        {{ 'contact.informations.email.value'|trans }}
                    </p>
                </div>
            </div>
            <div class="footer_mainpanel_right" id="contact-us">
                {{ render(controller('AppBundle:AboutUs:contactWidget')) }}
            </div>
            <div class="footer_mainpanel_social">
                <a href="https://www.facebook.com/quantummonkeys"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="https://www.linkedin.com/company/quantum-monkeys"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                <a href="https://www.twitter.com/quantummonkeys"> <i class="fa fa-twitter" aria-hidden="true"></i></a>
                <a href="http://plus.google.com/117632737566323856593"> <i class="fa fa-google-plus" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>

    <div class="footer_bottom">
        <div class="contanear">{{ 'copyright'|trans }}</div>
    </div>

    {% block javascripts %}
        <script type="application/javascript" src="{{ asset('js/vendors.min.js') }}"></script>
        <script type="application/javascript" src="{{ asset('js/app.min.js') }}"></script>

        {% if app.environment == 'prod' %}
            <script>
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

                ga('create', 'UA-87399751-1', 'auto');
                ga('send', 'pageview');
            </script>
        {% endif %}
    {% endblock %}
</body>
</html>
