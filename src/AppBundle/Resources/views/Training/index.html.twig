{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <h2>Trainings</h2>

    <ul>
        {% for training in trainings %}
            <li>
                {% media training.picture, 'big' %}

                <h4>{{ translate(training.translations, 'name') }}</h4>
                <p>{{ translate(training.translations, 'description')|nl2br }}</p>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
